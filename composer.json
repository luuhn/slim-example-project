{
    "require": {
        "slim/slim": "^4.2",
        "slim/psr7": "^0.5.0",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "cakephp/database": "^3.8",
        "lcobucci/jwt": "^3.3",
        "symfony/polyfill-uuid": "^1.20",
        "cakephp/chronos": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7 || ^8"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
